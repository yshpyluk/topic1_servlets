<!DOCTYPE web-app PUBLIC
        "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
        "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
    <display-name>Archetype Created Web Application</display-name>

    <servlet>
        <servlet-name>helloWorld</servlet-name>
        <servlet-class>com.yshpyluk.servlets.HelloWorld</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>games</servlet-name>
        <servlet-class>com.yshpyluk.servlets.Games</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>helloWorld</servlet-name>
        <url-pattern>/greetings</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>games</servlet-name>
        <url-pattern>/games</url-pattern>
    </servlet-mapping>
</web-app>
